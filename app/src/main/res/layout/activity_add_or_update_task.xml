<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOrUpdateTask">
    <TextView
        android:id="@+id/tv_add_task"
        android:text="@string/add_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/time_picker"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/et_task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/et_task_description"
        app:layout_constraintTop_toBottomOf="@id/tv_add_task"
        app:layout_constraintBottom_toTopOf="@id/tv_add_task"
        app:layout_constraintRight_toRightOf="@id/et_task_description"/>

    <TextView
        android:id="@+id/tv_add_description"
        android:text="@string/add_task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add_task"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/et_task_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintLeft_toRightOf="@id/tv_add_description"
        app:layout_constraintTop_toBottomOf="@id/tv_add_description"
        app:layout_constraintBottom_toTopOf="@id/tv_add_description"
        app:layout_constraintRight_toRightOf="parent"/>


    <CheckBox
        android:id="@+id/cb_sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/label_sunday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_description"/>
    <CheckBox
        android:id="@+id/cb_monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_monday"
        app:layout_constraintTop_toBottomOf="@+id/cb_sunday"
        app:layout_constraintBottom_toTopOf="@+id/cb_sunday"
        app:layout_constraintLeft_toRightOf="@+id/cb_sunday"/>
    <CheckBox
        android:id="@+id/cb_tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_tuesday"
        app:layout_constraintTop_toBottomOf="@+id/cb_monday"
        app:layout_constraintBottom_toTopOf="@+id/cb_monday"
        app:layout_constraintLeft_toRightOf="@+id/cb_monday"/>
    <CheckBox
        android:id="@+id/cb_wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_wednesday"
        app:layout_constraintTop_toBottomOf="@+id/cb_tuesday"
        app:layout_constraintBottom_toTopOf="@+id/cb_tuesday"
        app:layout_constraintLeft_toRightOf="@+id/cb_tuesday"/>
    <CheckBox
        android:id="@+id/cb_thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_thursday"
        app:layout_constraintTop_toBottomOf="@+id/cb_wednesday"
        app:layout_constraintBottom_toTopOf="@+id/cb_wednesday"
        app:layout_constraintLeft_toRightOf="@+id/cb_wednesday"/>
    <CheckBox
        android:id="@+id/cb_friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_friday"
        app:layout_constraintTop_toBottomOf="@+id/cb_thursday"
        app:layout_constraintBottom_toTopOf="@+id/cb_thursday"
        app:layout_constraintLeft_toRightOf="@+id/cb_thursday"/>
    <CheckBox
        android:id="@+id/cb_saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_saturday"
        app:layout_constraintTop_toBottomOf="@+id/cb_friday"
        app:layout_constraintBottom_toTopOf="@+id/cb_friday"
        app:layout_constraintLeft_toRightOf="@+id/cb_friday"/>

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/btn_add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_save"
        app:layout_constraintTop_toBottomOf="@id/et_task_description"
        app:layout_constraintRight_toRightOf="@id/et_task_description"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_delete_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_delete"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_task_description"
        app:layout_constraintRight_toLeftOf="@id/btn_add_task"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>